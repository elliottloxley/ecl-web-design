gradientVert(offsetFromTop, topColour, bottomColour)
    background: topColour;
    background: -moz-linear-gradient(top, topColour 0%, topColour offsetFromTop, bottomColour 100%);
    background: -webkit-gradient(left top, left bottom, color-stop(0%, topColour), color-stop(offsetFromTop, topColour), color-stop(100%, bottomColour));
    background: -webkit-linear-gradient(top, topColour 0%, topColour offsetFromTop, bottomColour 100%);
    background: -o-linear-gradient(top, topColour 0%, topColour offsetFromTop, bottomColour 100%);
    background: -ms-linear-gradient(top, topColour 0%, topColour offsetFromTop, bottomColour 100%);
    background: linear-gradient(to bottom, topColour 0%, topColour offsetFromTop, bottomColour 100%);


gradientHorz(offsetFromLeft, leftColour, rightColour)
    background: leftColour;
    background: -moz-linear-gradient(left, leftColour 0%, rightColour offsetFromLeft, rightColour 100%);
    background: -webkit-gradient(left top, right top, color-stop(0%, leftColour), color-stop(offsetFromLeft, rightColour), color-stop(100%, rightColour));
    background: -webkit-linear-gradient(left, leftColour 0%, rightColour offsetFromLeft, rightColour 100%);
