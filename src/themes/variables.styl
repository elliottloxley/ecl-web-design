    background: -ms-linear-gradient(left, leftColour 0%, rightColour offsetFromLeft, rightColour 100%);
    background: linear-gradient(to right, leftColour 0%, rightColour offsetFromLeft, rightColour 100%);

gradientLeftRight(offset, leftColour, rightColour)
